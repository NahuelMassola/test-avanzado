<main id = "main" class="container mt-5">
    <div class="text-end">
        <button id="logout">Cerrar Session</button>
    </div>
    <div class="text-center mb-5">
        <h3>BIENVENIDO 
            {{this.firstName}} {{this.lastName}}
        </h3>
    </div>  
    <div class="row d-flex d-flex justify-content-between">
        {{#each products}}
            <div class="card col-3 m-2 border border-4" >
            <div class="card-body">
                <h5 class="card-title text-center">{{title}}</h5>
                <p class="card-text text-center mb-0">{{description}}</p>
                <p class="card-text text-center">cod: {{category}}</p>
                <h2 class="card-text text-center ">$ {{price}}</h2>
                <p class="card-text text-center ">Cantidad: {{stock}}</p>
                <div class="d-flex justify-content-center"> 
                <button type="button" class="btn btn-primary">Agregar</button> 
            </div>
            </div>
            </div>
            {{/each}}
    </div>

    <div class="d-flex justify-content-center ">
            {{#if prev}}
            <button id="prev" >Anterior</button>
            {{else}}
            <button  id="prev" disabled>Anterior</button>
            {{/if}}
            <p id="page" class="m-2"> {{page}} </p>
            {{#if next}}
            <button id="next" >Siguiente</button>
            {{else}}
            <button  id="next" disabled >Siguiente</button>
            {{/if}}
    </div>
</main>  
<script src="/js/logout.js"></script>    
<script src="/js/paginate.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
